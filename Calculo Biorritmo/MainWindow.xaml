<Window x:Class="Calculo_Biorritmo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculo_Biorritmo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel  HorizontalAlignment="Left">
            <Label Content="RFC:"/>
            <TextBox Name="rfc_input" MaxLength="13"/>
            <Button Content="Obtener Datos" Click="obtenerRFC_click"/>
            <StackPanel Name="grdRFC" Visibility="Collapsed">
                <Label Name="lbRfc" Content="Fecha de nacimiento: "/>
                <TextBlock Name="tbkRfc"/>
                <TextBlock Name="tbkLivingDays"/>
                <TextBlock Name="tbkFirstDayMonth"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
